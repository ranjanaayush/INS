library(lubridate)

valuation_date <- as.Date("2016-09-27")

# Filter claims reported before valuation date
claims_reported_before <- dt_policy_claim[date_report < valuation_date, .N]

cat("Number of claims reported before", valuation_date, ":", claims_reported_before, "\n")





claims_within_3m <- dt_policy_claim[
  date_report >= valuation_date & date_report < (valuation_date %m+% months(3)),
  .N
]

claims_within_12m <- dt_policy_claim[
  date_report >= valuation_date & date_report < (valuation_date %m+% months(12)),
  .N
]

cat("Claims within 3 months after valuation:", claims_within_3m, "\n")
cat("Claims within 12 months after valuation:", claims_within_12m, "\n")
